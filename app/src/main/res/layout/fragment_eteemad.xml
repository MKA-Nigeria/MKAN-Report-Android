<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.aliumujib.majlis.mkanreport.addnew.fragments.EteemadFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <com.aliumujib.majlis.mkanreport.utils.views.QuestionLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:questionnumber="1"
            app:questiontitle="Were there Executive Committee Meetings conducted during  the month?">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.aliumujib.majlis.mkanreport.utils.views.YesNoLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.aliumujib.majlis.mkanreport.utils.views.VerifiableEditText
                        android:id="@+id/number_of_executive_meetings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:isrequired="true"
                        app:titleText="How many?" />


                    <com.aliumujib.majlis.mkanreport.utils.views.VerifiableEditText
                        android:id="@+id/number_of_attendees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        app:isrequired="true"
                        app:titleText="Number of attendees" />

                </LinearLayout>


            </LinearLayout>

        </com.aliumujib.majlis.mkanreport.utils.views.QuestionLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">


            <com.aliumujib.majlis.mkanreport.utils.views.QuestionLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                app:questionnumber="2"
                app:questiontitle="Do you have Qaida'at Secretary?">

                <com.aliumujib.majlis.mkanreport.utils.views.YesNoLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp" />
            </com.aliumujib.majlis.mkanreport.utils.views.QuestionLayout>


            <com.aliumujib.majlis.mkanreport.utils.views.QuestionLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                app:questionnumber="3"
                app:questiontitle="Was last month's report submitted?">

                <com.aliumujib.majlis.mkanreport.utils.views.YesNoLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp" />
            </com.aliumujib.majlis.mkanreport.utils.views.QuestionLayout>


        </LinearLayout>


        <com.aliumujib.majlis.mkanreport.utils.views.QuestionLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:questionnumber="4"
            android:layout_marginRight="8dp"
            app:questiontitle="№ of Mulk Members in the Qaidat">

            <com.aliumujib.majlis.mkanreport.utils.views.VerifiableEditText
                android:id="@+id/number_of_mulk_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                app:isrequired="true" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.aliumujib.majlis.mkanreport.utils.views.VerifiableEditText
                    android:id="@+id/number_of_mulk_members_present_at_meeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:isrequired="true"
                    app:titleText="№ present at meeting?" />

                <com.aliumujib.majlis.mkanreport.utils.views.VerifiableEditText
                    android:id="@+id/number_of_mulk_members_absent_at_meeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    app:isrequired="true"
                    app:titleText="№ absent at meeting" />

            </LinearLayout>


        </com.aliumujib.majlis.mkanreport.utils.views.QuestionLayout>

        <com.aliumujib.majlis.mkanreport.utils.views.QuestionLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:questionnumber="5"
            android:layout_marginRight="8dp"
            app:questiontitle="Mo'tamad’s Phone №"
            >

            <com.aliumujib.majlis.mkanreport.utils.views.VerifiableEditText
                android:id="@+id/motammads_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                app:isrequired="true" />

        </com.aliumujib.majlis.mkanreport.utils.views.QuestionLayout>



    </LinearLayout>
</LinearLayout>