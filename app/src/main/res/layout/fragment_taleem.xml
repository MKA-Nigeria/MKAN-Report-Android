<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        tools:context="com.aliumujib.majlis.mkanreport.addnew.fragments.TaleemFragment">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context="com.aliumujib.majlis.mkanreport.addnew.fragments.EteemadFragment">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="№ of Ta'leem classes conducted in the month "
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                <com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:required="true">

                    <EditText
                        android:id="@+id/number_of_taleem_classes_conducted_for_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/transparent"
                        android:hint="0000"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                </com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="0dp"
                    android:background="@color/divider"
                    android:visibility="visible" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            tools:context="com.aliumujib.majlis.mkanreport.addnew.fragments.EteemadFragment">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2."
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total number of hours spent for taleem classes"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                <com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:required="true">

                    <EditText
                        android:id="@+id/total_number_of_hours_spent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/transparent"
                        android:hint="0000"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                </com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="0dp"
                    android:background="@color/divider"
                    android:visibility="visible" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            tools:context="com.aliumujib.majlis.mkanreport.addnew.fragments.EteemadFragment">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3."
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. of Khuddam who participated in:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Talimul Quran session"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                        <com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:required="true">

                            <EditText
                                android:id="@+id/number_of_khuddam_in_talimul_quran_session"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/transparent"
                                android:hint="0000"
                                android:inputType="number"
                                android:maxLines="1"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                        </com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="0dp"
                            android:background="@color/divider"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Age Group Book Review"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                        <com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:required="true">

                            <EditText
                                android:id="@+id/number_of_khuddam_in_age_group_book_review"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/transparent"
                                android:hint="0000"
                                android:inputType="number"
                                android:maxLines="1"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                        </com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="0dp"
                            android:background="@color/divider"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ICT \nTraining"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                        <com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:required="true">

                            <EditText
                                android:id="@+id/number_of_khuddam_in_ICT_training"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/transparent"
                                android:hint="0000"
                                android:inputType="number"
                                android:maxLines="1"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                        </com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="0dp"
                            android:background="@color/divider"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Proficiency Exams\n Preparation"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                        <com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:required="true">

                            <EditText
                                android:id="@+id/number_of_khuddam_in_proficiency_exams"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/transparent"
                                android:hint="0000"
                                android:inputType="number"
                                android:maxLines="1"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                        </com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="0dp"
                            android:background="@color/divider"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:required="true">

                        <EditText
                            android:id="@+id/total_number_of_khuddam_participating_in_taleem_activities"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:background="@color/transparent"
                            android:hint="0000"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                    </com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="0dp"
                        android:background="@color/divider"
                        android:visibility="visible" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            tools:context="com.aliumujib.majlis.mkanreport.addnew.fragments.EteemadFragment">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4."
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="№ of books reviewed during the month "
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                        <com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:required="true">

                            <EditText
                                android:id="@+id/total_number_of_books_reviewed_in_month"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/transparent"
                                android:hint="0000"
                                android:inputType="number"
                                android:maxLines="1"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                        </com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="0dp"
                            android:background="@color/divider"
                            android:visibility="visible" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5."
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nazim Taleem’s Phone\n№"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                        <com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:required="true">

                            <EditText
                                android:id="@+id/nazim_taleem_phone_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/transparent"
                                android:hint="0000"
                                android:inputType="phone"
                                android:maxLines="1"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                        </com.aliumujib.majlis.mkanreport.utils.inputvalidator.InputValidator>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="0dp"
                            android:background="@color/divider"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>