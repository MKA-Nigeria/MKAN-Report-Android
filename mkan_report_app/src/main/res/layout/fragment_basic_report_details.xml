<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.aliumujib.majlis.mkan_report_app.addnew.fragments.BasicReportDetailsFragment">

    <com.aliumujib.majlis.mkan_report_app.utils.views.QuestionLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:questionnumber="1"
        app:questiontitle="Report details:">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <com.aliumujib.majlis.mkan_report_app.utils.views.VerifiableEditText
                android:id="@+id/ilaqa_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                app:titleText="Ilaqa" />

            <com.aliumujib.majlis.mkan_report_app.utils.views.VerifiableEditText
                android:id="@+id/dila_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                app:titleText="Dila" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.aliumujib.majlis.mkan_report_app.utils.views.VerifiableEditText
                android:id="@+id/muqami_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                app:titleText="Muqami" />

            <com.aliumujib.majlis.mkan_report_app.utils.views.VerifiableEditText
                android:id="@+id/date_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                app:editable="false"
                app:titleText="Date" />
        </LinearLayout>

    </com.aliumujib.majlis.mkan_report_app.utils.views.QuestionLayout>
</LinearLayout>
